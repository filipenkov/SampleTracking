<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="Atlassian" url="http://www.atlassian.com/"/>
    </plugin-info>

    <module-type name="Date Provider Module" key="dateProvider" class="com.atlassian.jira.extra.icalfeed.dateprovider.DateProviderModuleDescriptor">
        <description>Provides extension points for plugins to insert dates into the iCalendar stream generated by the plugin</description>
    </module-type>

    <component-import name="SAL Application Properties" key="applicationProperties">
        <description>JIRA application properties</description>
        <interface>com.atlassian.sal.api.ApplicationProperties</interface>
    </component-import>

    <rest key="iCalendarResource" name="JIRA entities as iCalendar REST" path="/ical" version="1.0">
        <description>RESTful service for exporting JIRA entitites such as issue and versions as iCalendar</description>
    </rest>
</atlassian-plugin>