<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.atlassian.upm</groupId>
        <artifactId>atlassian-universal-plugin-manager</artifactId>
        <version>2.1.5</version>
    </parent>
    <artifactId>atlassian-universal-plugin-manager-plugin</artifactId>
    <packaging>atlassian-plugin</packaging>
    <name>Atlassian Universal Plugin Manager Plugin</name>
    <description>This is the plugin that provides the Atlassian Universal Plugin Manager.</description>
    <build>
        <plugins>
            <plugin>
                <groupId>com.atlassian.maven.plugins</groupId>
                <artifactId>maven-amps-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Import-Package>
                            com.atlassian.bamboo*;version="${bamboo.version}";resolution:=optional,
                            com.atlassian.bandana*;version="3.1.0";resolution:=optional,
                            com.atlassian.config*;version="0.9";resolution:=optional,
                            com.atlassian.confluence*;version="${confluence.target.version}";resolution:=optional,
                            com.atlassian.crucible*;version="${fecru.target.version}";resolution:=optional,
                            com.atlassian.event*;version="0.0",
                            com.atlassian.jira*;version="${jira.target.version}";resolution:=optional,
                            com.atlassian.plugin.metadata;version="1.2", <!-- hack to work around REFAPP-118 -->
                            com.atlassian.plugins.rest.common*;version="1.0.5",
                            com.atlassian.plugin*;version="2.6",
                            com.atlassian.templaterenderer*;version="1.1",
                            com.atlassian.upm.api*;version="${project.version}", <!-- self-wire to be compatible with the license storage plugin -->
                            com.atlassian.user*;version="0.0";resolution:=optional,
                            com.atlassian.util.concurrent*;version="[0.0.12,0.0.12]",
                            com.cenqua.fisheye.*;version="${fecru.target.version}";resolution:=optional,
                            com.google.common*;version="1.0",
                            com.opensymphony.module.propertyset*;version="0.0";resolution:=optional,
                            com.sun.syndication*;version="1.0",
                            javax.annotation;version="0.0",
                            javax.net.*;version="0.0",
                            javax.net.ssl*;version="0.0",
                            javax.portlet;version="0.0.0";resolution:=optional,
                            javax.servlet*;version="0.0", <!-- version 0.0 is exported by JIRA system bundle -->
                            javax.ws.rs*;version="1.0",
                            javax.xml*;version="0.0",
                            javax.imageio*;version="0.0",
                            org.apache.commons.codec*;version="1.4",
                            org.apache.commons.fileupload*;version="1.2",
                            org.apache.commons.io*;version="1.4",
                            org.apache.commons.lang*;version="2.4",
                            org.apache.commons.httpclient*;version="3.0",
                            org.apache.commons.logging*;version="1.1",
                            org.codehaus.jackson*;version="1.4.4",
                            org.codehaus.jackson.xc*;version="0.0";resolution:=optional,
                            org.jdom*;version="1.0",
                            org.joda.time*;version=${joda.time.version},
                            org.osgi.framework;version="1.3",
                            org.osgi.service.log;version="1.3";resolution:=optional,
                            org.osgi.service.packageadmin*;version="1.2",
                            org.osgi.util.tracker*;version="1.4.0",
                            org.slf4j*;version="1.5",
                            org.springframework.beans.factory*;version="0.0",
                            org.springframework.context*;version="0.0",
                            org.springframework.osgi*;version="1.1.2",
                            org.w3c*;version="0.0",
                            org.xml*;version="0.0",
                            sun.misc;version="0.0";resolution:=optional
                        </Import-Package>
                        <Export-Package>
                            org.codehaus.jackson*;version="1.4.4",
                            org.apache.commons.fileupload*;version="1.2",
                            com.atlassian.util.concurrent*;version="0.0.12",
                            com.atlassian.upm.api*;version="${project.version}",
                            com.atlassian.upm.spi*;version="${project.version}"
                        </Export-Package>
                        <Bundle-Activator>org.apache.felix.bundlerepository.Activator</Bundle-Activator>
                        <Private-Package>
                            com.atlassian.extras.*,
                            com.atlassian.upm.license.internal*
                        </Private-Package>
                    </instructions>
                    <buildTestPlugin>true</buildTestPlugin>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-selfupdate-plugin</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                            <includeArtifactIds>atlassian-universal-plugin-manager-selfupdate-plugin</includeArtifactIds>
                            <stripVersion>true</stripVersion>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-plugin-for-tests</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.testOutputDirectory}</outputDirectory>
                            <includeArtifactIds>atlassian-universal-plugin-manager-test-plugin-v2-image-resource-bundled,atlassian-universal-plugin-manager-test-plugin-v2-installable,atlassian-universal-plugin-manager-test-plugin-v2-bundled-has-no-update,atlassian-universal-plugin-manager-test-plugin-v2-installable-has-no-update,atlassian-universal-plugin-manager-test-plugin-v1-installable,atlassian-universal-plugin-manager-test-plugin-v99-unsupported</includeArtifactIds>
                            <stripVersion>true</stripVersion>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>net.sf.alchim</groupId>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <suffix>-min</suffix>
                    <jswarn>false</jswarn>
                </configuration>
            </plugin>
        </plugins>
    </build>
