		public static function isReservedKey(key:String):Boolean
	    {
	        if (key == null) return false;
	        var i:int;
	        var allowedPrefix:String;
	        for(i=0;i<JIRA_META_ATTRIBUTE_ALLOWED_LIST.length;i++)
	        {
	            // Check if our meta attribute starts with one of the allowed prefixes, eg. 'jira.permission'
	            allowedPrefix = JIRA_META_ATTRIBUTE_ALLOWED_LIST[i];
	            if (key == allowedPrefix || StringHelper.beginsWith(key,allowedPrefix))
	            {
	                return false;
	            }
	        }
	        return StringHelper.beginsWith(key,JIRA_META_ATTRIBUTE_KEY_PREFIX);
	    }
		
