<assembly>
    <id>source</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>atlassian-jira-${project.version}-source</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>target/dependency/apache-maven-${maven.version.source}/</directory>
            <outputDirectory>maven</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>**/conf/settings.xml</exclude>
            </excludes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/checkouts</directory>
            <outputDirectory/>
            <includes>
                <include>**/*</include>
            </includes>            
            <excludes>
                <exclude>**/jira-project/jira-distribution/jira-nightly-tests/**</exclude>
            </excludes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>src/main/bin/build.sh</source>
            <outputDirectory/>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>src/main/bin/build-with-tests.sh</source>
            <outputDirectory/>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>src/main/bin/build.bat</source>
            <outputDirectory/>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>src/main/maven/conf/settings.xml</source>
            <outputDirectory>maven/conf/</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
    </files>

    <dependencySets>
        <!-- licenses -->
        <dependencySet>
            <outputDirectory/>
            <unpack>true</unpack>
            <unpackOptions>
                <includes>
                    <include>licenses/*</include>
                </includes>
            </unpackOptions>
            <includes>
                <include>com.atlassian.jira:jira-common-distribution</include>
            </includes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
        </dependencySet>
    </dependencySets>
</assembly>
